{
  "name": "omdomdom",
  "version": "0.2.3",
  "description": "A virtual DOM implementation that turns strings into HTML",
  "main": "lib/omdomdom.cjs.js",
  "module": "lib/omdomdom.es.js",
  "browser": "dist/omdomdom.js",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "rollup -c rollup.config.test.js -w",
    "build": "BABEL_ENV=build rollup -c",
    "build:publish": "BABEL_ENV=publish rollup -c",
    "eslint:check": "eslint -c .eslintrc.json",
    "prettier:check": "prettier --config .prettierrc.json --check",
    "prettier:write": "prettier --write",
    "git:update-origin": "git add . && git commit -m '[npm publish] update metadata & cdn tags' && git push && git push --tags",
    "prepublishOnly": "paopu && npm run git:update-origin",
    "preversion": "npm test",
    "postversion": "npm run build:publish"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.1.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.3",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jshashes": "^1.0.8",
    "lint-staged": "^12.1.5",
    "paopu": "0.0.12",
    "prettier": "^2.5.1",
    "rollup": "^2.62.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2"
  },
  "engines": {
    "node": ">=14.7.0",
    "npm": ">=6.14.7"
  },
  "keywords": [
    "javascript",
    "js",
    "frontend",
    "dom",
    "virtual dom",
    "renderer"
  ],
  "files": [
    "lib/*.{js,map}",
    "dist/*.{js,map}",
    "src/**/*.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geotrev/omdomdom.git"
  },
  "bugs": {
    "url": "https://github.com/geotrev/omdomdom/issues"
  },
  "homepage": "https://github.com/geotrev/omdomdom",
  "author": "George Treviranus <geotrev@icloud.com>",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.js": [
      "npm run prettier:check",
      "npm run eslint:check"
    ],
    "*.json": [
      "npm run prettier:write"
    ]
  }
}
